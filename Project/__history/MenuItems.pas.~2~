unit MenuItems;

interface

uses AllTypesInProject, WorkWithLists;
Procedure MenuItem2_WatchLists(ArtistList, AlbumList, SongList: TAdrOfList);

implementation

Procedure MenuItem2_WatchLists(ArtistList, AlbumList, SongList: TAdrOfList);
var
  Menu: Integer;
begin
  repeat
    Writeln('Выберете действие:', #13#10, '1. Просмотреть список исполнителей.',
      #13#10, '2. Просмотреть список альбомов.', #13#10,
      '3. Просмотреть список песен.', #13#10, '0. Выйти из подпункта меню.');
    readln(Menu);
    case Menu of
      1:
        WatchArtistList(ArtistList);
      2:
        WatchAlbumList(AlbumList);
      3:
        WatchSongList(SongList);
    end;
  until Menu = 0;
end;

end.
